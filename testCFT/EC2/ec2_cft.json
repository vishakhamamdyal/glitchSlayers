{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "secure EC2 instance template",
  "Resources": {
    "secureSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "inbound traffic - secure",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22",
            "CidrIp": "0.0.0.0/0"
          }
        ],
        "VpcId": "vpc-123456"
      }
    },
    "secureEC2Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-12345678",
        "InstanceType": "t2.micro",
        "KeyName": "my-key",
        "SecurityGroupIds": [
          {
            "Ref": "secureSecurityGroup"
          }
        ],
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/bash\n",
                "yum update -y\n"
              ]
            ]
          }
        }
      }
    }
  }
}