{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "secure EC2 instance template",
  "Resources": {
    "secureSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "inbound traffic - secure",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22",
            "CidrIp": "10.0.0.0/16"
          }
        ],
        "VpcId": {
          "Ref": "VPCId"
        }
      }
    },
    "secureEC2Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-12345678",
        "InstanceType": "t2.micro",
        "KeyName": "my-key",
        "SecurityGroupIds": [
          {
            "Ref": "secureSecurityGroup"
          }
        ],
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/bash\n",
                "yum update -y\n"
              ]
            ]
          }
        },
        "IamInstanceProfile": {
          "Ref": "InstanceProfile"
        },
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeType": "gp2",
              "VolumeSize": "8",
              "Encrypted": "true"
            }
          }
        ],
        "Monitoring": "true"
      }
    }
  },
  "Parameters": {
    "VPCId": {
      "Type": "AWS::EC2::VPC::Id",
      "Description": "VPC Id"
    },
    "InstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Path": "/",
        "Roles": [
          {
            "Ref": "EC2Role"
          }
        ]
      }
    }
  },
  "Outputs": {
    "InstanceID": {
      "Description": "Instance ID",
      "Value": {
        "Ref": "secureEC2Instance"
      }
    }
  }
}